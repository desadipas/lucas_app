<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_button_inicio">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_button_secundario">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_textview_title" parent="style_textview_inicio">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/soylucasfondo</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/soylucasverde</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/soylucasfondo</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Toolbar.SubTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="style_toolbar">
        <item name="android:layout_height">100dp</item>
    </style>

</resources>