<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#e64522</item>
        <item name="colorPrimaryDark">#c33219</item>
        <item name="colorAccent">@color/gris500</item>

        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/Red</item>
        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/Yellow</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/soylucasfondo</item>
        <item name="colorPrimaryDark">@color/soylucasrojo_dos</item>
        <item name="colorAccent">@color/soylucasfondo</item>
        <!-- Para cambiar el menú emergente y el color del texto de la aplicación  -->
        <item name="android:textColor">@color/soylucasverde</item>
        <!-- Para cambiar el fondo del menú de opciones -->
        <item name="android:itemBackground">@color/soylucasfondo</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
        <!-- Para cambiar el estilo de alerta dialogo -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

        <item name="colorControlActivated">@color/soylucasamarillo</item>
    </style>

    <style name="AlertDialogTheme"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/soylucasamarillo</item>
        <item name="android:background">@color/White</item>
        <item name="android:textColorPrimary">@color/Black40Opacity</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
    </style>

    <style name="WindowTitleStyle"
        parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/White</item>
    </style>

    <declare-styleable name="BubbleSeekBar">
        <attr name="bsb_min" format="integer|reference" />
        <attr name="bsb_max" format="integer|reference" />
        <attr name="bsb_progress" format="integer|reference" />
        <attr name="bsb_track_size" format="dimension|reference" />
        <attr name="bsb_second_track_size" format="dimension|reference" />
        <attr name="bsb_thumb_radius" format="dimension|reference" />
        <attr name="bsb_thumb_radius_on_dragging" format="dimension|reference" />
        <attr name="bsb_section_count" format="integer|reference" />
        <attr name="bsb_thumb_color" format="color|reference" />
        <attr name="bsb_track_color" format="color|reference" />
        <attr name="bsb_second_track_color" format="color|reference" />
        <attr name="bsb_show_text" format="boolean" />
        <attr name="bsb_text_size" format="dimension|reference" />
        <attr name="bsb_text_color" format="color|reference" />
        <attr name="bsb_text_position">
            <enum name="sides" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <attr name="bsb_show_thumb_text" format="boolean" />
        <attr name="bsb_thumb_text_size" format="dimension|reference" />
        <attr name="bsb_thumb_text_color" format="color|reference" />
        <attr name="bsb_bubble_color" format="color|reference" />
        <attr name="bsb_bubble_text_size" format="dimension|reference" />
        <attr name="bsb_bubble_text_color" format="color|reference" />
        <attr name="bsb_show_section_mark" format="boolean" />
        <attr name="bsb_auto_adjust_section_mark" format="boolean" />
        <attr name="bsb_show_progress_in_float" format="boolean" />
        <attr name="bsb_anim_duration" format="integer" />
        <attr name="bsb_touch_to_seek" format="boolean" />
    </declare-styleable>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/Black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:dropDownVerticalOffset">-4dp</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="formLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="fieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="style_textview_title" parent="style_textview_inicio">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/soylucasfondo</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="style_textview_inicio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="style_edittext_inicio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/MyEditTextTheme</item>
    </style>

    <style name="MyEditTextTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/soylucasamarillo</item>
        <item name="colorControlActivated">@color/soylucasverde</item>
    </style>

    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/soylucasverde</item>
    </style>

    <style name="MyErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/soylucasfondo</item>
    </style>

    <!-- -->

    <style name="style_button_inicio">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="style_button_secundario">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/White</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">@color/soylucasfondo</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/White</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gris400</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/Indigo</item>
        <item name="colorControlActivated">@color/soylucasfondo</item>
    </style>

    <style name="MyAlertDialogTheme">
        <item name="android:textSize">10sp</item>
        <item name="android:textColorPrimary">@color/soylucasamarillo</item>
        <item name="android:textColor">@color/soylucasverde_dos</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Toolbar.SubTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_toolbar">
        <item name="android:layout_height">56dp</item>
    </style>

</resources>
