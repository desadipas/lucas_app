<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/White"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dip"
                    android:text="Departamento"
                    android:textColor="@color/gris600" />

                <Spinner
                    android:id="@+id/sp_departamento_empleo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dip"
                    android:text="Provincia"
                    android:textColor="@color/gris600" />

                <Spinner
                    android:id="@+id/sp_provincia_empleo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dip"
                    android:text="Distrito"
                    android:textColor="@color/gris600" />

                <Spinner
                    android:id="@+id/sp_distrito_empleo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="3dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dip"
                        android:text="Nro o Mz"
                        android:textColor="@color/gris600" />

                    <Spinner
                        android:id="@+id/sp_nro_mz_empleo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_nro_mz_empleo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    app:hintTextAppearance="@style/MyHintText"
                    tools:errorEnabled="true"
                    tools:errorTextAppearance="@style/MyErrorText">

                    <EditText
                        android:id="@+id/et_nro_mz_empleo"
                        style="@style/style_edittext_inicio"
                        android:gravity="start"
                        android:hint="Nro/Mz"
                        android:inputType="text"
                        android:maxLength="5"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/edittext_text_size"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="3dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dip"
                        android:text="Dpto o Lt"
                        android:textColor="@color/gris600" />

                    <Spinner
                        android:id="@+id/sp_dpto_lt_empleo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_dpto_lt_empleo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    app:hintTextAppearance="@style/MyHintText"
                    tools:errorEnabled="true"
                    tools:errorTextAppearance="@style/MyErrorText">

                    <EditText
                        android:id="@+id/et_dpto_lt_empleo"
                        style="@style/style_edittext_inicio"
                        android:gravity="start"
                        android:hint="Dpto/Lote"
                        android:inputType="text"
                        android:maxLength="5"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/edittext_text_size"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dip"
                    android:text="Tipo direcciÃ³n"
                    android:textColor="@color/gris600" />

                <Spinner
                    android:id="@+id/sp_tipo_direccion_empleo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_direccion_empleo"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/MyHintText"
                tools:errorTextAppearance="@style/MyErrorText"
                tools:errorEnabled="true">

                <EditText
                    android:id="@+id/et_direccion_empleo"
                    android:gravity="start"
                    android:hint="DirecciÃ³n empleo"
                    android:inputType="textMultiLine"
                    android:maxLength="40"
                    android:textAlignment="viewStart"
                    style="@style/style_edittext_inicio"
                    android:textSize="@dimen/edittext_text_size"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cbx_autorizo_datos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text="Autorizo a Edpyme Inversiones La Cruz a utilizar mis datos personales para los fines mencionados."
                        android:textSize="@dimen/textview_text_size"
                    />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_link_terminos"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/soylucasfondo"
                            android:textColorLink="@color/Red"
                            android:text="Ver TÃ©rminos y Condiciones (*)"
                            android:textSize="@dimen/textview_text_size"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:paddingTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbx_autorizo_envio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Autorizo a Edpyme inversiones la Cruz a enviarme informaciÃ³n sobre campaÃ±as vigentes de sus productos ofertados."
                    android:textSize="@dimen/textview_text_size"
                    />

            </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_codigo_verificador_numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="15dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_confirmar_envio_codigo"
                style="@style/style_button_inicio"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ps_button_soylucas_amarillo"
                android:text="solicitar pin"
                android:textColor="@color/White" />

            <TextView
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/Black"
                android:textSize="@dimen/textview_text_size"
                android:text="Ingresa tu PIN de seguridad"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="15dp">

                <EditText
                    android:id="@+id/et_pin_seguridad"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:longClickable="true"
                    android:gravity="center"
                    android:hint="----"
                    android:digits="0123456789"
                    android:textSize="@dimen/edittext_text_size"
                    android:maxLength="4"/>

            </LinearLayout>



        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="top"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_atras_direccion_empleo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ps_button_soylucas_blanco"
            android:drawableLeft="@drawable/ic_atras_24px"
            style="@style/style_button_secundario"
            android:textColor="@color/Black"
            android:text="atras"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_continuar_direccion_empleo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ps_button_soylucas_amarillo"
            android:drawableRight="@drawable/ic_continuar_forward_24px"
            style="@style/style_button_secundario"
            android:textColor="@color/White"
            android:text="continuar"/>

    </LinearLayout>

</LinearLayout>